<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@color/colorPrimary"
        android:weightSum="100"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/lyt_workingtime"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/button_border_orange"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/red100"
                    android:text="4 hours not completed">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:text="Complete today's 4 hours working time to get hour bonus"
                    android:textStyle="italic|bold"
                    >

                </TextView>

            </LinearLayout>
            <TextView
                android:visibility="gone"
                android:id="@+id/txt_weekly"
                android:layout_marginVertical="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black">

            </TextView>

            <ImageView
                android:id="@+id/img_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/popup_stop_ico"
                />


            <TextView
                android:id="@+id/txt_firstline"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"

                android:gravity="center"
                android:text="DO YOU WANT TO"

                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                />
            <TextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="3dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="START SERVICE?"

                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btn_start"
                android:layout_width="200dp"
                android:layout_height="34dp"
                android:background="@drawable/button_white"
                android:text="START SERVICE"
                android:textColor="@color/colorPrimary">

            </Button>




        </LinearLayout>
    </LinearLayout>



</androidx.cardview.widget.CardView>