<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_Item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_id"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="start"
            android:layout_height="wrap_content"
            android:text="ID: 123456"
            android:textColor="@color/darkGrey">

        </TextView>
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="end"
            android:textSize="13dp"
            android:layout_height="wrap_content"
            android:text="25/06/2021 10:00 AM"
            android:textColor="@color/darkGrey">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custamer Name"
            android:textColor="@color/darkGrey"
            android:textSize="16dp"
            android:textStyle="bold">

        </TextView>
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custamer Name"
            android:textColor="@color/darkGrey"
            android:textSize="13dp">
        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="40dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:paddingLeft="43dp"
                        android:paddingRight="10dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:background="@drawable/shape_circular_round_corners_with_border_color"
                        android:text="Schedule : 25/05 10:30 AM"
                        android:textSize="12dp"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>

                <ImageView
                    android:background="@drawable/shape_wish_circular"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/iv_typeimage"
                    android:visibility="gone"
                    android:backgroundTint="#254695"
                    android:src="@drawable/express1">

                </ImageView>
                <ImageView
                    android:background="@drawable/shape_wish_circular"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="3dp"
                    android:visibility="gone"
                    android:id="@+id/iv_typeimage1"
                    android:backgroundTint="#C5262B"
                    android:src="@drawable/normal_dlv1">

                </ImageView>
                <ImageView
                    android:background="@drawable/shape_wish_circular"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="visible"
                    android:padding="3dp"
                    android:id="@+id/iv_typeimage2"
                    android:backgroundTint="#646464"
                    android:src="@drawable/schedule1">

                </ImageView>

            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".6"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_status1"
                    android:layout_width="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="5dp"
                    android:textSize="13dp"
                    android:backgroundTint="#E41717"
                    android:visibility="gone"
                    android:paddingBottom="5dp"
                    android:background="@drawable/shaip_bem_all"
                    android:text="cancel"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="5dp"
                    android:textSize="13dp"
                    android:visibility="visible"
                    android:paddingBottom="5dp"
                    android:backgroundTint="#0FCA17"
                    android:background="@drawable/shaip_bem_all"
                    android:text="Delivered"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>